<h1 class="bg-[#AE445A] font-bold text-lg sm:text-xl md:text-2xl p-4 sm:p-5 h-24 flex items-center justify-center text-[#432E54]">
  Registrar / Actualizar Estudiante
</h1>
<div class="lg:grid lg:grid-cols-2 lg:gap-[30px]">


<div class="p-4 sm:p-6 bg-[#E8BCB9] m-[20px] rounded-[10px] lg:w-[50%] col-start-1 row-start-1 mr-auto ml-auto w-[70%]">
  <%= form_with model: (@estudiante || Estudiante.new), url: dashboard_ingresos_path, local: true, id: 'estudiante-form', class: "space-y-4" do |f| %>
    <% if (@estudiante || Estudiante.new).respond_to?(:errors) && (@estudiante || Estudiante.new).errors.any? %>
      <div id="error_explanation" class="bg-red-100 border border-red-400 text-red-700 p-3 rounded">
        <h2 class="font-semibold mb-2"><%= pluralize((@estudiante || Estudiante.new).errors.count, "error") %> impidieron guardar el estudiante:</h2>
        <ul class="list-disc pl-5">
          <% (@estudiante || Estudiante.new).errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <h2 class="text-lg font-semibold mb-2 text-[#432E54]">Datos del Estudiante</h2>

    <div class="form-field">
      <%= f.text_field :nombre_completo, required: true, placeholder: "Nombre Completo", class: "w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-pink-300", data: { field: 'nombre_completo' } %>
      <div class="field-error text-red-600 text-xs mt-1 hidden" data-error-for="nombre_completo"></div>
    </div>

    <div class="form-field">
      <%= f.telephone_field :telefono, placeholder: "Teléfono", class: "w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-pink-300", data: { field: 'telefono' } %>
      <div class="field-error text-red-600 text-xs mt-1 hidden" data-error-for="telefono"></div>
    </div>

    <div class="form-field">
      <%= f.collection_select :grado_id,
  Grado.all.order(:nombre),
  :id,
  :nombre,
  { prompt: "Selecciona un Grado" },
  { class: "w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-700", data: { field: 'grado_id' } } %>
      <div class="field-error text-red-600 text-xs mt-1 hidden" data-error-for="grado_id"></div>
    </div>

    <div class="form-field">
      <%= f.text_field :institucion, placeholder: "Institución", class: "w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-pink-300", data: { field: 'institucion' } %>
      <div class="field-error text-red-600 text-xs mt-1 hidden" data-error-for="institucion"></div>
    </div>

    <p>
      <%= f.submit "Guardar", class: "bg-pink-400 hover:bg-pink-500 text-white font-semibold py-2 px-4 rounded transition-colors duration-200" %>
    </p>
  <% end %>
</div>

<div id="pago-container" class="p-4 sm:p-6 bg-[#E8BCB9] m-[20px] rounded-[10px] lg:w-[50%] mr-auto ml-auto w-[70%]">
  <h2 class="text-lg font-semibold mb-2 text-[#432E54]">Registrar Pago</h2>
  <!--<p class="mb-4">Estudiante seleccionado: <span id="estudiante-seleccionado" class="font-medium">(ninguno)</span></p>-->

  <%= form_with url: dashboard_guardar_pago_path, local: true, class: "space-y-4", id: 'pago-form' do |f| %>
    <%= hidden_field_tag :estudiante_id, nil, id: "pago_estudiante_id" %>

    <div class="form-field">
      <%= select_tag :concepto_pago_id,
  options_from_collection_for_select(@conceptos, :id, :nombre),
  prompt: "Selecciona un concepto",
  class: "w-full p-2 border border-gray-300 rounded-lg text-gray-700 bg-white focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500",
  data: { field: 'concepto_pago_id' } %>
      <div class="field-error text-red-600 text-xs mt-1 hidden" data-error-for="concepto_pago_id"></div>
    </div>

    <div class="form-field">
      <%= number_field_tag :monto, nil, step: 0.01, placeholder: "Monto", class: "w-full border border-gray-300 rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-pink-300", data: { field: 'monto' } %>
      <div class="field-error text-red-600 text-xs mt-1 hidden" data-error-for="monto"></div>
    </div>

    <p>
      <%= submit_tag "Guardar Pago", class: "bg-pink-400 hover:bg-pink-500 text-white font-semibold py-2 px-4 rounded transition-colors duration-200", id: 'pago-submit' %>
    </p>
  <% end %>
</div>


