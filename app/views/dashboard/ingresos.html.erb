  <div class="search-container mb-4">
    <input type="text" id="search-input" placeholder="Buscar..." class="w-full border border-[#432E54] border-[2px] rounded px-3 py-2 text-sm focus:outline-none focus:ring-2 focus:ring-pink-300">
  </div>

  <div class="tables-wrapper overflow-x-auto">
