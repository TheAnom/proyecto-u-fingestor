<div class="min-h-screen bg-[#E8BCB9] flex flex-col items-center justify-center p-6 sm:p-8">
<h1 class="text-[30px] font-bold mb-6 text-[#432E54]">Iniciar Sesi√≥n</h1>

<%= form_with url: login_path, method: :post, local: true, class: "w-[250px]" do%>
  <% if flash[:alert] %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4" role="alert">
      <p class="font-bold">Error</p>
      <p class="text-sm"><%= flash[:alert] %></p>
    </div>
  <% end %>

  <p class="mb-4">
    <label class="block text-[#432E54] font-semibold mb-2">Nombre de Usuario:</label>
    <%= text_field_tag :nombre, params[:nombre], 
        autocomplete: "off",
        required: true,
        class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#AE445A] focus:border-transparent" %>
  </p>

  <p class="mb-6">
    <label class="block text-[#432E54] font-semibold mb-2">Password:</label>
    <%= password_field_tag :password, nil,
        required: true,
        class: "w-full px-3 py-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-[#AE445A] focus:border-transparent" %>
  </p>

  <p class="flex justify-center items-center gap-4 mt-6">
    <%= submit_tag "Ingresar", class: "bg-[#AE445A] hover:bg-[#8e3448] text-white font-bold w-[100px] h-[40px] flex justify-center items-center rounded-[10px] lg:w-[200px] lg:h-[50px] cursor-pointer transition-colors" %>
    <%= link_to "Inicio", root_path, class: "bg-gray-500 hover:bg-gray-600 text-white font-bold w-[100px] h-[40px] flex justify-center items-center rounded-[10px] lg:w-[200px] lg:h-[50px] transition-colors" %>
  </p>
<% end %>

</div>